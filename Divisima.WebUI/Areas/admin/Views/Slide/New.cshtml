@model SlideVM
<div class="right_col" role="main">
    <div class="">

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Yeni Slayt Ekle</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" asp-action="New" method="post" enctype="multipart/form-data">


                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Slide.Motto"></label>
                                <div class="col-sm-10 ">
                                    <input asp-for="@Model.Slide.Motto" class="form-control " />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Slide.Title"></label>
                                <div class="col-sm-10 ">
                                    <input asp-for="@Model.Slide.Title" class="form-control " />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Slide.Description"></label>
                                <div class="col-sm-10 ">
                                    <input asp-for="@Model.Slide.Description" class="form-control " />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Picture"></label>
                                <div class="col-sm-10 ">
                                    <input asp-for="@Model.Picture" class="form-control" type="file" accept="image/png, image/gif, image/jpeg" />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Slide.Link"></label>
                                <div class="col-sm-10 ">
                                    <input asp-for="@Model.Slide.Link" class="form-control " />
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Slide.Price"></label>
                                <div class="col-sm-10 ">
                                    <input asp-for="@Model.Slide.Price" class="form-control " />
                                </div>
                            </div>                           
                            <div class="item form-group">
                                <label class="col-form-label col-sm-2" asp-for="@Model.Slide.RecDate"></label>
                                <div class="col-sm-10">
                                    <input asp-for="@Model.Slide.RecDate" class="form-control" />
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-success">Ekle</button>
                                    <a class="btn btn-danger" asp-action="Cancel">İptal</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<!-- /page content -->